#program for reminding password
name="frank"
password="frankanna"
for i in range(3):
  nm = input("Enter your name : ")
  j=3
  if(nm==name):
     print("WELCOME Frank, your password is frankanna")
     break
  else:
     print("Incorrect name try again and chances left", j-i)
     continue
